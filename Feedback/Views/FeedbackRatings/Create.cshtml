@model Feedback_DAL.Models.FeedbackRating

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FeedbackRating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" value="@ViewBag.UserIdValue" hidden>
            <input asp-for="ProductId" value="@ViewBag.ProductId" hidden>

            <div class="form-group">

                <label asp-for="Rating" class="control-label"></label><br>
                <label asp-for="Rating" class="control-label">1</label>
                @Html.RadioButtonFor(m => m.Rating, "OneStar")
            <label asp-for="Rating" class="control-label">2</label>
                @Html.RadioButtonFor(m => m.Rating, "TwoStar")
                <label asp-for="Rating" class="control-label">3</label>
                @Html.RadioButtonFor(m => m.Rating, "ThreeStar")
                <label asp-for="Rating" class="control-label">4</label>
                @Html.RadioButtonFor(m => m.Rating, "FourStar")
                <label asp-for="Rating" class="control-label">5</label>
                @Html.RadioButtonFor(m => m.Rating, "FiveStar")
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Products" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
